<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_titleDate"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Today"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewHistory"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/panelColor"
        card_view:cardCornerRadius="7dp"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/kodeBarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#PCASS7"
                        android:layout_weight="2"
                        android:gravity="start"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/statusBarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Used"
                        android:layout_weight="8"
                        android:background="@drawable/status_bg"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:textSize="15dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/namaBarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Laptop Dell Ryzen DX3667ZS"
                        android:layout_weight="4"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="start"
                        android:textSize="15dp"
                        android:maxLines="3"/>

                    <TextView
                        android:id="@+id/historyDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="end|bottom"
                        android:text="12 July 2020 : 14.21"
                        android:textSize="15dp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>
